{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./interfaces",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "es2015",
    "module": "esnext",
    /*Emit*/
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /*Config*/
    "lib": ["es2020"],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.eslint.json"
    }
  ]
}
